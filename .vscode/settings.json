  "ansible.python.interpreterPath": "/Users/ChalkHwang/Workspaces/homelab-cluster/.venv/bin/python",
  "ansible.validation.enabled": true,
  "ansible.validation.lint.arguments": "--project-dir ansible -c .ansible-lint",
