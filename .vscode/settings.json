    "https://kubernetes-schemas.pages.dev/external-secrets.io/externalsecret_v1beta1.json": "externalsecret.yaml",
    "https://kubernetes-schemas.pages.dev/kustomize.toolkit.fluxcd.io/kustomization_v1.json": "ks.yaml",
